@model IEnumerable<Projekt_zaliczeniowy.Models.Match>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HostId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuestId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                <span>Stadium</span>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tickets_amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (@item.TeamsList.FirstOrDefault(x => x.Id == item.HostId) == null)
                {
                    <span>Unknown data</span>
                } else {
                    <a asp-controller="Team" asp-action="Details" asp-route-id="@item.HostId">@item.TeamsList.First(x => x.Id == item.HostId).Name</a>
                }
            </td>
            <td>
                @if (@item.TeamsList.FirstOrDefault(x => x.Id == item.GuestId) == null)
                {
                    <span>Unknown data</span>
                }
                else
                {
                    <a asp-controller="Team" asp-action="Details" asp-route-id="@item.GuestId">@item.TeamsList.First(x => x.Id == item.GuestId).Name</a>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                    @if (@item.TeamsList.FirstOrDefault(x => x.Id == item.HostId) == null)
                    {
                        <span>Unknown data</span>
                    }
                    else
                    {
                       @item.TeamsList.First(x => x.Id == item.HostId).Stadium
                    }
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tickets_amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)€
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>  |
                <a asp-action="Create" asp-controller="Ticket" asp-route-id="@item.Id">Buy ticket</a>
            </td>
        </tr>
}
    </tbody>
</table>
